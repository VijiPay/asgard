{
	"name": "asgard",
	"version": "1.0.0",
	"description": "Vijipay's Webservice",
	"main": "server.js",
	"license": "MIT",
	"private": true,
	"volta": {
		"node": "20.12.2"
	},
	"scripts": {
		"start": "pnpm db:migrate && node ./dist/src/serve.js",
		"start:dev": "pnpm build && tsx watch src/serve.ts --clear-screen=false",
		"build": "tsoa spec-and-routes && tsc --project tsconfig.build.json",
		"db:migrate": "pnpm prisma generate --schema=./prisma/ && pnpm prisma db push --schema=./prisma/",
		"rebuild:be": "docker compose build asgard && docker compose rm --force --stop asgard && docker compose up -d",
		"test": "vitest",
		"test:run": "vitest run",
		"tsc": "tsc",
		"knip": "knip",
		"up:dev": "pnpm build && docker compose -f docker-compose.yml up -d && docker logs -f asgard",
		"lint": "biome lint ./src",
		"lint:fix": "biome format --write ./src",
		"down": "docker compose down --remove-orphans",
		"watch": "watchy --no-init-spawn --debounce 1 -w src -- docker compose restart asgard"
	},
	"dependencies": {
		"@prisma/client": "5.17.0",
		"@tsoa/runtime": "6.3.0",
		"axios": "1.7.3",
		"bcryptjs": "2.4.3",
		"class-transformer": "0.5.1",
		"class-validator": "0.14.1",
		"cookie-parser": "1.4.6",
		"cors": "2.8.5",
		"dotenv": "16.4.5",
		"express": "4.19.2",
		"express-async-errors": "3.1.1",
		"google-auth-library": "9.13.0",
		"helmet": "7.1.0",
		"http-status": "1.7.4",
		"jsonwebtoken": "9.0.2",
		"marked": "14.0.0",
		"mem": "10.0.0",
		"mustache": "4.2.0",
		"nanoid": "3.3.7",
		"nodemailer": "6.9.14",
		"pg": "8.12.0",
		"prisma": "5.17.0",
		"reflect-metadata": "0.2.2",
		"swagger-jsdoc": "6.2.8",
		"swagger-ui-express": "5.0.1",
		"ts-node": "10.9.2",
		"tsoa": "6.3.1",
		"tsyringe": "4.8.0",
		"winston": "3.13.0"
	},
	"devDependencies": {
		"@biomejs/biome": "1.7.3",
		"@types/bcryptjs": "2.4.6",
		"@types/cookie-parser": "1.4.7",
		"@types/cors": "2.8.17",
		"@types/express": "4.17.21",
		"@types/jsonwebtoken": "9.0.6",
		"@types/morgan": "1.9.9",
		"@types/mustache": "4.2.5",
		"@types/node": "20.14.11",
		"@types/nodemailer": "6.4.15",
		"@types/swagger-ui-express": "4.1.6",
		"knip": "5.16.0",
		"nock": "13.5.4",
		"tslib": "2.6.2",
		"tsx": "4.15.7",
		"typescript": "5.5.3",
		"vitest": "2.0.3"
	}
}
