{
  "name": "asgard",
  "version": "1.0.0",
  "description": "Vijipay's Webservice",
  "main": "src/serverq.js",
  "license": "MIT",
  "volta": {
    "node": "20.12.2"
  },
  "scripts": {
    "start": "pnpm build && pnpm db:migrate && node dist/index.js",
    "build": "rimraf dist && tsx watch ./src/server.ts --clear-screen=false",
    "db:migrate": "prisma migrate dev",
    "db:migrate:undo": "knex migrate:down",
    "seed:dev": "docker compose run asgard pnpm ts-node scripts/seed/dev.ts",
    "rebuild:be": "docker compose build asgard && docker compose rm --force --stop asgard && docker compose up -d asgard",
    "up:dev": "docker compose up -d asgard && pnpm watch",
    "watch": "watchy --no-init-spawn --debounce 1 -w src -- docker compose restart asgard",
    "down": "docker compose down --remove-orphans",
    "lint": "pnpm biome format --write ./src",
    "lint:fix": "pnpm biome check --apply ./src",
    "knip": "knip",
    "test": "pnpm vitest"
  },
  "dependencies": {
    "@prisma/client": "5.14.0",
    "dotenv": "16.4.5",
    "express": "4.19.2",
    "express-async-errors": "3.1.1",
    "http-status": "1.7.4",
    "morgan": "1.10.0",
    "nanoid": "3.3.7",
    "pg": "8.12.0",
    "reflect-metadata": "0.2.2",
    "sequelize": "6.37.3",
    "sequelize-typescript": "2.1.6",
    "tsyringe": "4.8.0",
    "typeorm": "0.3.20",
    "winston": "3.13.0",
    "yup": "1.4.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.7.3",
    "@swc/cli": "0.1.65",
    "@swc/core": "1.5.5",
    "@swc/helpers": "0.5.11",
    "@tsconfig/node20": "20.1.4",
    "@types/express": "4.17.21",
    "@types/morgan": "1.9.9",
    "@types/node": "18.19.33",
    "@types/sequelize": "4.28.20",
    "knip": "5.16.0",
    "nock": "13.5.4",
    "prisma": "5.14.0",
    "rimraf": "4.4.1",
    "sinon": "18.0.0",
    "swagger-jsdoc": "6.2.8",
    "swagger-ui-express": "5.0.1",
    "ts-node": "10.9.2",
    "tslib": "2.6.2",
    "tsx": "4.15.7",
    "typescript": "5.4.5",
    "vitest": "1.6.0",
    "watchy": "0.10.1"
  }
}
