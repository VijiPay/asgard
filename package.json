{
	"name": "asgard",
	"version": "1.0.0",
	"description": "Vijipay's Webservice",
	"main": "server.js",
	"license": "MIT",
	"volta": {
		"node": "20.12.2"
	},
	"scripts": {
		"start": "pnpm migration:run && node server.js",
		"start:dev": " pnpm build && tsx watch src/server.ts --clear-screen=false",
		"build": "rimraf dist && tsc && tsoa spec-and-routes",
		"rebuild:be": "docker compose build asgard && docker compose rm --force --stop asgard && docker compose up -d asgard",
		"test": "pnpm vitest",
		"test:run": "pnpm vitest run",
		"up:dev": "pnpm build && docker compose -f docker-compose.yml up -d && docker logs -f asgard",
		"lint": "pnpm biome format --write ./src",
		"lint:fix": "pnpm biome check --apply ./src",
		"down": "docker compose down --remove-orphans",
		"watch": "watchy --no-init-spawn --debounce 1 -w src -- docker compose restart asgard",
		"migration:run": "typeorm-ts-node-commonjs migration:run -- -d database/datasource.js",
		"migration:run:local": "typeorm-ts-node-commonjs migration:run -- -d src/database/datasource.ts",
		"migration:create": "typeorm-ts-node-commonjs migration:create"
	},
	"dependencies": {
		"@tsoa/runtime": "6.3.0",
		"bcryptjs": "2.4.3",
		"class-transformer": "0.5.1",
		"class-validator": "0.14.1",
		"cors": "2.8.5",
		"express": "4.19.2",
		"express-async-errors": "3.1.1",
		"http-status": "1.7.4",
		"morgan": "1.10.0",
		"nanoid": "3.3.7",
		"pg": "8.12.0",
		"reflect-metadata": "0.2.2",
		"rimraf": "4.4.1",
		"swagger-jsdoc": "6.2.8",
		"swagger-ui-express": "5.0.1",
		"ts-node": "10.9.2",
		"tsoa": "6.3.1",
		"tsyringe": "4.8.0",
		"typeorm": "0.3.20",
		"typeorm-ts-node-commonjs": "0.3.20",
		"winston": "3.13.0"
	},
	"devDependencies": {
		"@biomejs/biome": "1.7.3",
		"@tsconfig/node20": "20.1.4",
		"@types/bcryptjs": "2.4.6",
		"@types/cors": "2.8.17",
		"@types/express": "4.17.21",
		"@types/morgan": "1.9.9",
		"@types/node": "18.19.33",
		"@types/swagger-ui-express": "4.1.6",
		"knip": "5.16.0",
		"nock": "13.5.4",
		"tslib": "2.6.2",
		"tsx": "4.15.7",
		"typescript": "5.4.5",
		"vitest": "1.6.0"
	}
}
