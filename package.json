{
  "name": "asgard",
  "version": "1.0.0",
  "description": "Vijipay's Webservice",
  "private": true,
  "type": "module",
  "license": "MIT",
  "scripts": {
    "start": "node build/bin/server.js",
    "build": "node ace build",
    "dev": "node ace serve --hmr",
    "test": "node ace test",
    "lint": "eslint .",
    "up:dev": "docker compose -f docker-compose.yml up -d && docker logs -f asgard",
    "down": "docker compose down --remove-orphans",
    "migration:run": "node ace migration:run",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit"
  },
  "imports": {
    "#controllers/*": "./app/controllers/*.js",
    "#exceptions/*": "./app/exceptions/*.js",
    "#models/*": "./app/models/*.js",
    "#abstracts/*": "./app/abstracts*.js",
    "#interface/*": "./app/interfaces/*.js",
    "#mails/*": "./app/mails/*.js",
    "#services/*": "./app/services/*.js",
    "#shared/*": "./shared/*.js",
    "#repositories/*": "./app/repositories/*.js",
    "#listeners/*": "./app/listeners/*.js",
    "#events/*": "./app/events/*.js",
    "#middleware/*": "./app/middleware/*.js",
    "#validators/*": "./app/validators/*.js",
    "#providers/*": "./providers/*.js",
    "#policies/*": "./app/policies/*.js",
    "#abilities/*": "./app/abilities/*.js",
    "#database/*": "./database/*.js",
    "#start/*": "./start/*.js",
    "#tests/*": "./tests/*.js",
    "#config/*": "./config/*.js"
  },
  "devDependencies": {
    "@adonisjs/assembler": "7.7.0",
    "@adonisjs/prettier-config": "1.3.0",
    "@adonisjs/tsconfig": "1.3.0",
    "@biomejs/biome": "1.7.3",
    "@japa/api-client": "2.0.3",
    "@japa/assert": "3.0.0",
    "@japa/plugin-adonisjs": "3.0.1",
    "@japa/runner": "3.1.4",
    "@swc/core": "1.7.6",
    "@types/luxon": "3.4.2",
    "@types/node": "22.1.0",
    "@types/nodemailer": "6.4.15",
    "@types/swagger-ui-express": "4.1.6",
    "@types/uuid": "10.0.0",
    "hot-hook": "0.2.6",
    "knip": "5.16.0",
    "nock": "13.5.4",
    "pino-pretty": "11.2.2",
    "prettier": "3.3.3",
    "ts-node": "10.9.2",
    "typescript": "~5.5"
  },
  "dependencies": {
    "@adonisjs/ally": "5.0.2",
    "@adonisjs/auth": "9.2.3",
    "@adonisjs/core": "6.12.1",
    "@adonisjs/cors": "2.2.1",
    "@adonisjs/lucid": "21.1.1",
    "@adonisjs/redis": "9.1.0",
    "@adonisjs/session": "7.4.2",
    "@vinejs/vine": "2.1.0",
    "luxon": "3.5.0",
    "nodemailer": "6.9.14",
    "pg": "8.12.0",
    "reflect-metadata": "0.2.2",
    "swagger-jsdoc": "6.2.8",
    "swagger-ui-express": "5.0.1",
    "uuid": "10.0.0"
  },
  "hotHook": {
    "boundaries": [
      "./app/controllers/**/*.ts",
      "./app/middleware/*.ts"
    ]
  },
  "overrides": {
    "strtok3": "8.0.1"
  },
  "resolutions": {
    "strtok3": "8.0.1"
  },
  "pnpm": {
    "overrides": {
      "strtok3": "8.0.1"
    }
  },
  "prettier": "@adonisjs/prettier-config"
}
