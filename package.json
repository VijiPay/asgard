{
  "name": "asgard",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "build": "rimraf dist && swc ./src -d dist",
    "start": "node dist/src/server.js",
    "start:debug": "pnpm build && node --inspect=0.0.0.0 dist/src/server.js",
    "start:docker": "pnpm build && node dist/src/server.js",
    "watch": "watchy --no-init-spawn --debounce 1 -w src -- docker compose restart asgard",
    "lint": "eslint ./src --no-cache",
    "lint:fix": "yarn lint -- --fix",
    "knip": "knip",
    "down": "docker-compose down --remove-orphans"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "volta": {
    "node": "20.12.2"
  },
  "devDependencies": {
    "@swc/cli": "^0.3.12",
    "@swc/core": "^1.5.0",
    "@tsconfig/node20": "20.1.4",
    "@types/express": "4.17.21",
    "@types/morgan": "1.9.9",
    "@typescript-eslint/eslint-plugin": "7.7.1",
    "@typescript-eslint/parser": "7.7.1",
    "eslint": "9.1.1",
    "rimraf": "^5.0.5",
    "watchy": "0.10.1"
  },
  "dependencies": {
    "express": "4.19.2",
    "morgan": "1.10.0",
    "typescript": "5.4.5",
    "uuid": "9.0.1"
  }
}
