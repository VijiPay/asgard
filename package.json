{
	"name": "asgard",
	"version": "1.0.0",
	"description": "Vijipay's Webservice",
	"main": "server.js",
	"license": "MIT",
	"private": true,
	"volta": {
		"node": "20.12.2"
	},
	"scripts": {
		"start": "pnpm db:migrate  && node ./dist/src/serve.js",
		"start:dev": "pnpm build && tsx watch src/serve.ts --clear-screen=false",
		"build": "tsoa spec-and-routes && pnpm rimraf dist && tsc --project tsconfig.build.json",
		"db:migrate": "pnpm prisma db push",
		"rebuild:be": "docker compose build asgard && docker compose rm --force --stop asgard && docker compose up -d",
		"test": "vitest",
		"test:run": "vitest run",
		"tsc": "tsc",
		"knip": "knip",
		"up:dev": "pnpm build && docker compose -f docker-compose.yml up -d && docker logs -f asgard",
		"lint": "biome lint ./src",
		"lint:fix": "biome format --write ./src",
		"down": "docker compose down --remove-orphans",
		"watch": "watchy --no-init-spawn --debounce 1 -w src -- docker compose restart asgard"
	},
	"dependencies": {
		"@prisma/client": "5.16.2",
		"@swc/cli": "0.4.0",
		"@swc/core": "1.6.13",
		"@swc/helpers": "0.5.11",
		"@tsoa/runtime": "6.3.0",
		"bcryptjs": "2.4.3",
		"class-transformer": "0.5.1",
		"class-validator": "0.14.1",
		"cors": "2.8.5",
		"dotenv": "16.4.5",
		"express": "4.19.2",
		"express-async-errors": "3.1.1",
		"helmet": "7.1.0",
		"http-status": "1.7.4",
		"morgan": "1.10.0",
		"nanoid": "3.3.7",
		"pg": "8.12.0",
		"prisma": "5.16.2",
		"reflect-metadata": "0.2.2",
		"rimraf": "4.4.1",
		"sequelize": "6.37.3",
		"sequelize-typescript": "2.1.6",
		"swagger-jsdoc": "6.2.8",
		"swagger-ui-express": "5.0.1",
		"ts-node": "10.9.2",
		"tsoa": "6.3.1",
		"tsyringe": "4.8.0",
		"typeorm": "0.3.20",
		"typeorm-ts-node-commonjs": "0.3.20",
		"winston": "3.13.0"
	},
	"devDependencies": {
		"@biomejs/biome": "1.7.3",
		"@tsconfig/node20": "20.1.4",
		"@types/bcryptjs": "2.4.6",
		"@types/cors": "2.8.17",
		"@types/express": "4.17.21",
		"@types/morgan": "1.9.9",
		"@types/node": "18.19.33",
		"@types/swagger-ui-express": "4.1.6",
		"knip": "5.16.0",
		"nock": "13.5.4",
		"tslib": "2.6.2",
		"tsx": "4.15.7",
		"typescript": "5.4.5",
		"vitest": "1.6.0"
	}
}
