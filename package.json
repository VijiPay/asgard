{
	"name": "asgard",
	"version": "1.0.0",
	"description": "Vijipay's Webservice",
	"private": true,
	"type": "module",
	"license": "MIT",
	"scripts": {
		"start": "node bin/server.js",
		"build": "node ace build",
		"dev": "node ace serve --hmr",
		"test": "node ace test",
		"lint": "biome lint .",
		"lint:fix": "biome format --write .",
		"knip": "knip",
		"up:dev": "pnpm build && docker compose -f docker-compose.yml up -d && docker logs -f server",
		"down": "docker compose down --remove-orphans",
		"migration:run": "node ace migration:run",
		"db:migrate": "docker compose exec asgard node ace migration:run --force",
		"rebuild:be": "docker compose build server && docker compose rm --force --stop server && docker compose up -d server",
		"db:console": "docker compose run postgres psql -h localhost -U postgres -d asgard_db",
		"format": "prettier --write .",
		"typecheck": "tsc --noEmit"
	},
	"imports": {
		"#abstracts/*": "./app/abstracts/*.js",
		"#controllers/*": "./app/controllers/*.js",
		"#exceptions/*": "./app/exceptions/*.js",
		"#interfaces/*": "./types/*.js",
		"#models/*": "./app/models/*.js",
		"#mails/*": "./app/mails/*.js",
		"#repositories/*": "./app/repositories/*.js",
		"#services/*": "./app/services/*.js",
		"#shared/*": "./app/shared/*.js",
		"#listeners/*": "./app/listeners/*.js",
		"#events/*": "./app/events/*.js",
		"#middleware/*": "./app/middleware/*.js",
		"#validators/*": "./app/validators/*.js",
		"#providers/*": "./providers/*.js",
		"#policies/*": "./app/policies/*.js",
		"#abilities/*": "./app/abilities/*.js",
		"#database/*": "./database/*.js",
		"#routes/*": "./app/routes/*.js",
		"#start/*": "./start/*.js",
		"#tests/*": "./tests/*.js",
		"#config/*": "./config/*.js"
	},
	"devDependencies": {
		"@adonisjs/assembler": "7.8.2",
		"@adonisjs/prettier-config": "1.3.0",
		"@adonisjs/tsconfig": "1.4.0",
		"@biomejs/biome": "1.9.2",
		"@japa/api-client": "2.0.3",
		"@japa/assert": "3.0.0",
		"@japa/plugin-adonisjs": "3.0.1",
		"@japa/runner": "3.1.4",
		"@swc/core": "1.7.26",
		"@types/luxon": "3.4.2",
		"@types/node": "22.5.5",
		"@types/nodemailer": "6.4.15",
		"@types/uuid": "10.0.0",
		"hot-hook": "0.2.6",
		"knip": "5.30.5",
		"nock": "13.5.5",
		"prettier": "3.3.3",
		"typescript": "5.6.2"
	},
	"dependencies": {
		"adonis-autoswagger": "3.63.0",
		"@adonisjs/ally": "5.0.2",
		"@adonisjs/auth": "9.2.3",
		"@adonisjs/core": "6.14.0",
		"@adonisjs/cors": "2.2.1",
		"@adonisjs/lucid": "21.2.0",
		"@adonisjs/redis": "9.1.0",
		"@adonisjs/session": "7.4.2",
		"@vinejs/vine": "2.1.0",
		"luxon": "3.5.0",
		"nodemailer": "6.9.15",
		"pino-pretty": "11.2.2",
		"pg": "8.13.0",
		"reflect-metadata": "0.2.2",
		"ts-node-maintained": "^10.9.4",
		"uuid": "10.0.0"
	},
	"hotHook": {
		"boundaries": ["./app/controllers/**/*.ts", "./app/middleware/*.ts"]
	},
	"overrides": {
		"strtok3": "8.0.1"
	},
	"resolutions": {
		"strtok3": "8.0.1"
	},
	"pnpm": {
		"overrides": {
			"strtok3": "8.0.1"
		}
	},
	"prettier": "@adonisjs/prettier-config",
	"packageManager": "pnpm@9.10.0+sha512.73a29afa36a0d092ece5271de5177ecbf8318d454ecd701343131b8ebc0c1a91c487da46ab77c8e596d6acf1461e3594ced4becedf8921b074fbd8653ed7051c"
}
