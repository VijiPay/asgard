{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "types": ["node"],
    "lib": ["ESNext"],
    "outDir": "dist",
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "ts-node": {
    "swc": true,
    "transpileOnly": true,
    "files": true
  },
  "include": ["./src"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
