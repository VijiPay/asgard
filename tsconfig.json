{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "types": ["node"],
    "outDir": "dist",
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "ts-node": {
    "swc": true,
    "transpileOnly": true,
    "files": true
  },
  "include": ["./src", "swagger.ts"],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.ispec.ts", "**/*.uspec.ts"]
}
